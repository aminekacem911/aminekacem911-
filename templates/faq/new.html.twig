{% extends 'navigation/adminBase.html.twig' %}
{% block title %}New Faq{% endblock %}

{% block body %}

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header">Website faq</div>
                    <div class="card-body">
                        <div class="card-title">
                            {# {{ dump(form.logo) }} #}
                            <h3 class="text-center title-2">Informations</h3>
                        </div>
                        <hr>
                        {{ form_start(form) }}
                        {{ form_label(form.question, 'Question', { 'attr': {'class': 'form-control'} }) }}
                        {{ form_widget(form.question, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_label(form.answer, 'Answer', { 'attr': {'class': 'form-control'} }) }}
                        {{ form_widget(form.answer, { 'attr': {'class': 'form-control'} }) }}
                        <br>
                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-lock fa-lg"></i>&nbsp;
                            <span
                                id="payment-button-amount">{{ button_label|default('Save') }}</span>
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>




{% endblock %}