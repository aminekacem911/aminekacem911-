{% extends 'navigation/adminBase.html.twig' %}
{% block title %}Faq{% endblock %}

{% block body %}



<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header">Website faq Num : {{ faq.id }}</div>
                    <div class="card-body">

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ faq.id }}</td>
                                </tr>
                                <tr>
                                    <th>Question</th>
                                    <td>{{ faq.question }}</td>
                                </tr>
                                <tr>
                                    <th>Answer</th>
                                    <td>{{ faq.answer }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <br>
<div style="float:right">
                        <a class="btn btn-primary" href="{{ path('faq_index') }}">back to list</a>

                        <a class="btn btn-primary"
                            href="{{ path('faq_edit', {'id': faq.id}) }}">edit</a>

                        <href class="btn btn-danger">{{ include('faq/_delete_form.html.twig') }}</href>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>




{% endblock %}