{% extends 'navigation/adminBase.html.twig' %}

{% block title %}comment index{% endblock %}

{% block body %}

      <div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Comments Section</h3>
                                   {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
                                <div class="table-data__tool">
                                    <div class="table-data__tool-left">
                                        
                                    </div>
                                 
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                               
                                                <th>ID</th>
                                                <th>Comment</th>
                                                <th>film</th>
                                               <th>User</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                         {% for comment in comments %}
                                            <tr class="tr-shadow">
                                               
                                                <td>{{ comment.id }}</td>
                                                <td>
                                                    {{ comment.comment }}
                                                </td>
                                                <td >{{ comment.film }}</td>
                                                 <td >{{ comment.user }}</td>
                                                <td>
                                                    <div class="table-data-feature">
                                                    
                                                       
                                                          
                                                        
                                                          <a class="item" data-toggle="tooltip" data-placement="top" title="Approve"href=" {{ path('app_comment_app', {'id': comment.id}) }}"> <i class="far fa-check-square"></i></a>
                                                          <a class="item" data-toggle="tooltip" data-placement="top" title="Delete"href=" {{ path('app_comment_delete', {'id': comment.id}) }}"> <i class="zmdi zmdi-delete"></i></a>
                                                          
                                                       
                                                      
                                                    </div>
                                                </td>
                                            </tr>
                                            {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                               </div>
                        </div>
{% endblock %}

