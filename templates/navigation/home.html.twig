        data-aos-delay="200">

        <h1>Unlimited movies, TV <br>shows, and more.</h1>

      </div>
    </div>

</section><!-- End Hero -->

<main id="main">
  <!-- ======= Cta Section ======= -->
  <section id="cta" class="cta">
    <div class="container" data-aos="zoom-in">

      <div class="row">
        <div class="col-lg-9 text-center text-lg-left">
          <h3>Epic website</h3>
          <p> great and big library of movies where you can do an easily search anad theres no add</p>
        </div>

      </div>
      <hr class="hr">
    </div>

  </section><!-- End Cta Section -->
  <section id="cta" class="cta">
    <div class="container" data-aos="zoom-in">

      <div class="row">
        <div class="col-lg-9 text-center text-lg-left">
          <h3>Good Websirte</h3>
          <p> No shitty ads posted and its fully secured !</p>
        </div>

      </div>
      <hr class="hr">
    </div>

  </section><!-- End Cta Section -->
  <section id="cta" class="cta">
    <div class="container" data-aos="zoom-in">

      <div class="row">
        <div class="col-lg-9 text-center text-lg-left">
          <h3>Nice Communty</h3>
          <p> Nice people gonna across your path through comments and dont worry they are fully controlled by admin for
            stoping bulling and insulting for your good</p>
        </div>

      </div>
      <hr class="hr">
    </div>
  </section><!-- End Cta Section -->

  <!-- ======= Frequently Asked Questions Section ======= -->
  <section id="faq" class="faq section-bg">
    <div class="container" data-aos="fade-up">

      <div class="section-title">
        <h2>Frequently Asked Questions</h2>

      </div>

      <div class="faq-list">
        <ul>


          {% for faq in faqs %}


          <li data-aos="fade-up" data-aos-delay="100">
            <i class="bx bx-help-circle icon-help"></i> <a data-toggle="collapse" class="collapse"
              href="#faq-list-{{ faq.id }}">{{ faq.question }} <i class="bx bx-chevron-down icon-show"></i><i
                class="bx bx-chevron-up icon-close"></i></a>
            <div id="faq-list-{{ faq.id }}" class="collapse " data-parent=".faq-list">
              <p>
                {{ faq.answer }}
              </p>
            </div>
          </li>
          {% else %}
          <div class=" text-justify">
            <p>No Comments found !!!</p>
          </div>
          {% endfor %}

        </ul>
      </div>

    </div>
  </section><!-- End Frequently Asked Questions Section -->


</main><!-- End #main -->
{% endblock %}