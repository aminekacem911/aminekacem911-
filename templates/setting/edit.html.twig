{% extends 'navigation/adminBase.html.twig' %}

{% block body %}



<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header">Website Setting</div>
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                    {% endfor %}
                    <div class="card-body">
                        <div class="card-title">

                            <h3 class="text-center title-2">Informations</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                {{ include('setting/_form.html.twig', {'button_label': 'Update'}) }}
                            </div>

                            <div class="col-md-4">


                                <img src="{{ asset('img/') }}{{ setting.logo }}"
                                    style="width:300px;height:300px" alt="">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}